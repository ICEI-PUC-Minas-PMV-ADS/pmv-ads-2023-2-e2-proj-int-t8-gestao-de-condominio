@model Arpagen.Models.Morador

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Morador</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlApartamento" class="control-label"></label>
                <input asp-for="BlApartamento" class="form-control" />
                <span asp-validation-for="BlApartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NmApartamento" class="control-label"></label>
                <input asp-for="NmApartamento" class="form-control" />
                <span asp-validation-for="NmApartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Veículo" class="control-label"></label>
                <input asp-for="Veículo" class="form-control" />
                <span asp-validation-for="Veículo" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a class="btn btn-success" asp-action="Index">Voltar</a>
            <div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
